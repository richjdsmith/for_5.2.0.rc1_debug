<h1 class="title is-3 is-spaced is-primary has-text-centered">Welcome Back.</h1>
<h2 class="subtitle is-6 is-secondary has-text-centered">
  New to Review_App? <%= link_to "Sign up", new_registration_path(resource_name) %>
</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%#= f.label :email, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-medium', placeholder: 'Your Email Address' %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope fa-xs"></i>
      </span>
    </div>
    
  </div>

  <div class="field has-text-centered">
    <%#= f.label :password, class: 'label'  %>
    <div class="control has-icons-left">
      <%= f.password_field :password, autocomplete: "off", class: 'input is-medium', placeholder: 'Your Password' %>
      <span class="icon is-small is-left">
        <i class="fas fa-key fa-xs"></i>
      </span>
    </div>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>
  

  <div class="field">
    <div class="control">
      <%= f.submit "Log In", class: 'button is-fullwidth is-medium is-success' do %>
        <span class="icon is-small">
          <i class="fas fa-lock fa-s"></i>
        </span>
      <% end%>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="control">
          <p class="help has-text-centered">
            <%= f.check_box :remember_me, class: 'checkbox' %>
           Remember Me </p>
        </div>
      </div>
  <% end -%>
<% end %>





