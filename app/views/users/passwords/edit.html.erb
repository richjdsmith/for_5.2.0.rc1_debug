

<h1 class="title is-3 is-spaced is-primary has-text-centered">Let's Get You Signed In.</h1>
<h2 class="subtitle is-6 is-secondary has-text-centered">
  Just enter a new password for your account below and it will be updated.
</h2>



<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%#= f.label :password, class: 'label'  %>
    <div class="control has-icons-left">
      <%= f.password_field :password, autocomplete: "off", class: 'input is-medium', placeholder: 'Your New Password' %>
      <span class="icon is-small is-left">
        <i class="fas fa-key fa-xs"></i>
      </span>
    </div>
    <p class="help has-text-centered">
      <% if @minimum_password_length %>
        (<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </p>
    
  </div>

  


  <div class="field">
    <div class="control">
      <%= f.submit "Change My Password", class: 'button is-fullwidth is-medium is-success' do %>
        <span class="icon is-small">
          <i class="fas fa-lock fa-s"></i>
        </span>
      <% end%>
    </div>
  </div>
<% end %>

<span class="links"></span>
<%= render "devise/shared/links" %>

