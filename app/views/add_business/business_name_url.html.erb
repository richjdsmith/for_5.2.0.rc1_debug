<div class="columns is-fullheight is-centered">
  <div class="column is-centered is-6-desktop is-10-touch">
    <%= image_tag 'logo.png', id: 'logo', class: 'image' %>

    <h1 class="title is-5 is-spaced is-primary has-text-centered">Yer a Wizard</h1>
    <h2 class="subtitle is-6 is-secondary has-text-centered">
    Yer a wizzard Harry!
    </h2>
    <%= form_for @business, url: wizard_path, method: :put do |f| %>


      <div class="field">
        <div class="control">
          <%= f.label :Business_Name, class: 'label' %>
          <%= f.text_field :name, class: 'input is-medium' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.label :Custom_URL, class: 'label' %>
          <%= f.text_field :custom_url, class: 'input is-medium' %>
        </div>
      </div>


      <div class="actions">
        <%= f.submit 'Next Step!', class: 'button is-fullwidth is-success'%>
      </div>
    <% end %>
  </div>
</div>





